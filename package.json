{
  "name": "churchify-app-backend",
  "version": "1.0.0",
  "description": "Churchify-App is a church management application.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "pm2": "pm2 start process.yml --no-daemon",
    "start:dev": "cross-env NODE_ENV=development && nodemon ./server/index.js --exec babel-node",
    "heroku-postbuild": "yarn build",
    "build": "cross-env NODE_ENV=production && yarn clean && babel ./server -d ./dist && cd dist && zip -r projectchurchifyapi.zip . && cd ..",
    "seed": "sequelize db:seed:all",
    "migrate": "sequelize db:migrate",
    "migrate:undo:all": "sequelize db:migrate:undo:all",
    "migrate:undo": "sequelize db:migrate:undo",
    "refreshdb": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "deploy": "yarn && yarn build && yarn start",
    "setup": "chmod +x bin/deploy.prod.sh && bin/deploy.prod.sh && yarn seed",
    "clean": "rm -rf dist",
    "lint": "eslint --fix --ext .js .",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "deploy:test:sh": "chmod +x bin/deploy.test.sh && chmod +x docs/testdata/*.sql && bin/deploy.test.sh",
    "pretest": "cross-env NODE_ENV=test yarn refreshdb && chmod +x bin/deploy.test.sh && bin/deploy.test.sh",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text --require @babel/register --env=test mocha --timeout 100000 ./server/tests/**/*.test.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GerrardE/churchify-app-backend.git"
  },
  "keywords": [
    "Node",
    "Postgres",
    "Express",
    "TDD"
  ],
  "author": "Gerrard Ezeugwa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GerrardE/churchify-app-backend/issues"
  },
  "homepage": "https://github.com/GerrardE/churchify-app-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "babel-plugin-module-resolver": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "core-js": "^3.8.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "regenerator-runtime": "^0.13.7",
    "sequelize": "^6.5.0",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^6.0.2",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^8.2.1",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "2.2.1",
    "sinon": "^7.3.2"
  },
  "resolutions": {
    "chokidar": "^3.4.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "server/**"
    ],
    "exclude": [
      "**/tests/**",
      "server/migrations",
      "server/validations",
      "server/models",
      "server/config",
      "server/seeders"
    ]
  }
}
